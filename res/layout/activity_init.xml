<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#D4929A"
    android:orientation="vertical">
	<ImageView android:src="@drawable/header"
	    android:layout_height="300dip"
	    android:layout_width="300dip"
	    android:scaleType="centerInside"
	    android:layout_gravity="center_horizontal"/>
	<ImageView android:id="@+id/startBtn"
	    android:src="@drawable/start"
	    android:layout_width="120dip"
	    android:layout_height="120dip"
	    android:scaleType="centerInside"
	    android:layout_marginTop="30dip"
	    android:layout_gravity="center_horizontal"/>
	<RelativeLayout android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		    android:layout_marginTop="20dip"
	    android:layout_gravity="center">
		<ImageView android:id="@+id/playersBtn"
		    android:layout_width="150dip"
		    android:layout_height="30dip"
		    android:layout_gravity="center_horizontal"
		    android:src="@drawable/players" />
		<ImageView android:src="@drawable/user"
		    android:layout_marginTop="5dip"
		    android:layout_marginLeft="5dip"
		    android:layout_width="20dip"
		    android:layout_height="20dip"/>
	</RelativeLayout>
	<ImageView android:id="@+id/infoBtn"
	    android:layout_width="40dip"
	    android:layout_height="40dip"
	    android:layout_marginTop="20dip"
	    android:layout_marginLeft="10dip"
	    android:layout_gravity="left"
	    android:background="@drawable/info"/>		

</LinearLayout>
